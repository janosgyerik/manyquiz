<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/dialogContent"
              android:scrollbars="none">

    <TextView
            style="@style/summary"
            android:text="@string/description_contact"/>

    <RadioGroup
            android:id="@+id/message_type_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/default_message_type"
            >

        <RadioButton
                android:id="@id/default_message_type"
                android:text="@string/message_type_bug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bug"
                android:textColor="#000000"
                android:paddingRight="10dp"
                />

        <RadioButton
                android:paddingRight="10dp"
                android:text="@string/message_type_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="comment"
                android:textColor="#000000"
                />

        <RadioButton
                android:paddingRight="10dp"
                android:text="@string/message_type_idea"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="idea"
                />
    </RadioGroup>

    <EditText
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_contact"
            android:lines="5"
            android:gravity="top"
            android:text=""/>

    <Button
            android:id="@+id/btn_sendmessage"
            style="@style/linkButton"
            android:text="@string/btn_send"/>

</LinearLayout>