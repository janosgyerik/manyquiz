<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manyquiz.computers.lite"
    android:versionCode="1"
    android:versionName="0.1-beta" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="13" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.manyquiz.LiteQuizApplication"
        android:allowBackup="false"
        android:icon="@drawable/launcher_main"
        android:label="@string/app_name"
        android:theme="@style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.manyquiz.IntroActivity"
            android:label="@string/app_name_lite" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.manyquiz.QuizActivity"
            android:label="@string/label_quiz_activity" >
        </activity>
        <activity
            android:name="com.manyquiz.QuestionSuggestionActivity"
            android:label="@string/label_sendmessage_activity" >
        </activity>
        <activity
            android:name="com.manyquiz.ReportFaultActivity"
            android:label="@string/label_reportbug_activity" >
        </activity>
        <activity
            android:name="com.manyquiz.InfoActivity"
            android:label="@string/label_info_activity" >
        </activity>
        <activity
            android:name="com.manyquiz.SettingsActivity"
            android:label="@string/label_settings_activity" >
        </activity>
        <activity
            android:name="com.manyquiz.ResultsActivity"
            android:label="@string/label_results_activity" >
        </activity>
    </application>

</manifest>
