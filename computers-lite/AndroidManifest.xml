<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="quizHarness.quiz"
    android:versionCode="1"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.manyquiz.LiteQuizApplication"
        android:icon="@drawable/launcher_main"
        android:label="@string/app_name"
        android:theme="@style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.manyquiz.IntroActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.manyquiz.QuizActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.manyquiz.QuestionSuggestionActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.manyquiz.ReportFaultActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.manyquiz.InfoActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.manyquiz.SettingsActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.manyquiz.ResultsActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="ADMOB_PUBLISHER_ID"
            android:value="a14b9eac992329e" />
    </application>

</manifest>