<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Light.NoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <color name="headerBackgroundColor">#003366</color>

    <style name="mainHeaderWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/headerBackgroundColor</item>
    </style>

    <style name="mainHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/headerBackgroundColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="mainHeaderElement" parent="mainHeader">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="mainHeaderLastElement" parent="mainHeaderElement">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="liteWatermark" parent="mainHeaderElement">
        <item name="android:text">(LITE)</item>
        <item name="android:textColor">#aaaaaa</item>
    </style>

    <style name="mainContent">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
    </style>
        
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="wideButton" parent="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="weightedButton" parent="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="answerButton" parent="wideButton"></style>
    <style name="difficultyButton" parent="wideButton"></style>
    <style name="linkButton" parent="wideButton"></style>

    <style name="fillWidth">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="summary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>    

    <style name="explanation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="dialogContent">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="dialogSummary" parent="summary">
        <item name="android:textColor">#000000</item>
    </style>

</resources>