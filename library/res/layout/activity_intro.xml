<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        style="@style/mainHeaderWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            style="@style/mainHeader"
            android:layout_alignParentLeft="true"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/lite_watermark"
            style="@style/liteWatermark"
            android:layout_toRightOf="@id/title"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView style="@style/mainContent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/introduction"
                style="@style/introduction"
                android:text="@string/introduction" />

            <RadioGroup
                android:id="@+id/group1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio_difficulty2"
                    style="@style/radioButton"
                    android:checked="true"
                    android:text="@string/difficulty2" />

                <RadioButton
                    android:id="@+id/radio_difficulty3"
                    style="@style/radioButton"
                    android:checked="false"
                    android:text="@string/difficulty3" />

                <RadioButton
                    android:id="@+id/radio_difficulty4"
                    style="@style/radioButton"
                    android:checked="false"
                    android:text="@string/difficulty4" />

                <RadioButton
                    android:id="@+id/radio_difficulty5"
                    style="@style/radioButton"
                    android:checked="false"
                    android:text="@string/difficulty5" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_startQuiz"
            style="@style/wideButton"
            android:text="@string/startQuiz" />

        <Button
            android:id="@+id/btn_exit"
            style="@style/wideButton"
            android:text="@string/exit" />
    </LinearLayout>

</LinearLayout>