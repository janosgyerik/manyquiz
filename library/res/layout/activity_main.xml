<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        style="@style/mainHeaderWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            style="@style/mainHeader"
            android:layout_alignParentLeft="true"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/lite_watermark"
            style="@style/liteWatermark"
            android:layout_toRightOf="@id/title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/questions_i"
            style="@style/mainHeaderElement"
            android:layout_toLeftOf="@+id/separator"
            android:text="0" />

        <TextView
            android:id="@id/separator"
            style="@style/mainHeaderElement"
            android:layout_toLeftOf="@+id/questions_n"
            android:text="/" />

        <TextView
            android:id="@id/questions_n"
            style="@style/mainHeaderLastElement"
            android:layout_alignParentRight="true"
            android:text="0" />
    </RelativeLayout>

    <ScrollView style="@style/mainContent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/question"
                style="@style/question" />

            <LinearLayout
                android:id="@+id/choices"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button style="@style/answerButton" />

                <Button style="@style/answerButton" />

                <Button style="@style/answerButton" />

                <Button style="@style/answerButton" />
            </LinearLayout>

            <TextView
                android:id="@+id/explanation"
                style="@style/explanation"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_prev"
            style="@style/weightedButton"
            android:contentDescription="Previous"
            android:src="@drawable/btn_prev" />

        <ImageButton
            android:id="@+id/btn_finish"
            style="@style/weightedButton"
            android:src="@drawable/btn_finish"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_next"
            style="@style/weightedButton"
            android:contentDescription="Next"
            android:src="@drawable/btn_next" />
    </LinearLayout>

    <include layout="@layout/ads" />

</LinearLayout>